{
    "llm_config": {
        "model_name": "gpt-4o",
    },
    "tools": [
        # These tool definitions do not have to be in any particular order
        # How they are linked and call each other is defined within their
        # own specs.  This could be a graph, potentially even with cycles.

        # This first guy is the "Front Man".  He is identified as such because
        # he is the only one with no parameters in his function definition,
        # and therefore he needs to talk to the outside world to get things rolling.
        {
            "name": "polymath",

            # Note that there are no parameters defined for this guy's "function" key.
            # This is the primary way to identify this tool as a front-man,
            # distinguishing it from the rest of the tools.

            "function": {
                "description": "Assist users using neuro_san as a tool.",
            },

            "instructions": """
Use your tool to respond to the inquiry.
""",
            "tools": ["neuro_san"]
        },
        {
            "name": "neuro_san",
            "function": {
                "description": """A multi-purpose interface for interacting with various agent networks based on the specified `agent_network_name`.
    Available agent networks:
    - **date_time**: Provides the current date and time.
    - **music_nerd**: Answers music-related questions.
    - **website_search**: Performs internet searches.
                """,
                "parameters": {
                    "type": "object",
                    "properties": {
                        "agent_network_name": {
                            "type": "string",
                            "description": "The name of the agent network to use (e.g., 'date_time', 'music_nerd', 'website_search')."
                        },
                        "query": {
                            "type": "string",
                            "description": "The input query or prompt to send to the selected agent network."
                        }
                    },
                    "required": ["agent_network_name", "query"]
                }
            },
            "class": "neuro_tools.NeuroTools"
        }
    ]
}
